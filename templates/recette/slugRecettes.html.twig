{% extends 'base.html.twig' %}

{% block title %}Sandrine Coupart - {{ slugRecettes.titre }}{% endblock %}

{% block body %}
<div class="container text-center">
    <div class=" ">
        <div class="">
            <img src="/uploads/images/{{ slugRecettes.image }}" alt="{{ slugRecettes.titre }}" class="img-slug  img-fluid">
        </div>
        <div class="">
            <h3>{{ slugRecettes.titre }}</h3>
            <hr>
            <h4>Description</h4><br>
            <p>
                {{ slugRecettes.description }}
            </p>
            <hr>
            <h4>Les étapes</h4><br>
            <p>
                {{ slugRecettes.etapes }}
            </p>
            <hr>
            <h4>Ingrédients</h4><br>
            <p>
                {{ slugRecettes.ingredients }}
            </p>
            <hr>
            <h4>temps de préparation</h4><br>
            <p>
                {{ slugRecettes.tempsPreparation }} minutes
            </p>
            <hr>
            <h4>temps de cuisson</h4><br>
            <p class="mb-5">
                {{ slugRecettes.tempsCuisson }} minutes
            </p>
            <hr>
            <h4>Donner votre avis sur cette recette</h4>
            <a href="{{ path('avis_nouveau', {'id' : slugRecettes.id }) }}"><button type="submit" class="btn btn-primary mb-5">Donner votre avis</button></a>
        </div>
    </div>
</div>

{% endblock %}
